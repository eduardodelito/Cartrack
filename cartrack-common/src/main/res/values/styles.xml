<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AvenirMedium">
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/font18</item>
    </style>

    <style name="AvenirMedium.Red">
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/font18</item>
    </style>

    <style name="AvenirMedium.Black">
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font16</item>
    </style>

    <style name="AvenirSmall">
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="android:textSize">@dimen/font14</item>
    </style>

    <style name="AvenirSmall.Black">
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="android:textSize">@dimen/font14</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AvenirHeavy">
        <item name="android:fontFamily">@font/avenir_heavy</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/font30</item>
    </style>

    <style name="AvenirHeavy.Medium">
        <item name="android:fontFamily">@font/avenir_heavy</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/font20</item>
    </style>

    <style name="AvenirHeavy.Black">
        <item name="android:fontFamily">@font/avenir_heavy</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font18</item>
    </style>

    <style name="Font.Small.PrimaryDark.Bold" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Font.Small.DarkGray" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Font.Small.Red.Bold" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>